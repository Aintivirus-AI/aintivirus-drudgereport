# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Telegram bot username (without @) — used for the Login Widget on the web
NEXT_PUBLIC_TELEGRAM_BOT_NAME=mcafeereport_bot

# Admin Telegram User IDs (comma-separated)
# These users can manage the whitelist and have full access
# Find your ID by messaging @userinfobot on Telegram
ADMIN_TELEGRAM_IDS=123456789,987654321

# API Configuration
# Secret key for authenticating bot requests to the API
# Generate a random string: openssl rand -hex 32
API_SECRET_KEY=your_api_secret_key_here

# Website URL (change for production)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# OpenAI API Key
# Get from https://platform.openai.com/api-keys
# Used to generate headline suggestions, fact checking, and token metadata
OPENAI_API_KEY=sk-your_openai_api_key_here

# John McAfee Chatbot API
# The chatbot endpoint for article-aware AI chat
NEXT_PUBLIC_MCAFEE_CHAT_API=https://ai-bot.aintivirus.ai/api/chat

# ============= SOLANA CONFIGURATION =============

# Solana RPC URL
# Default: mainnet-beta (https://api.mainnet-beta.solana.com)
# For production, use a dedicated RPC provider like Helius or QuickNode
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# ============= WALLET SECRET PROVIDER =============
# Controls how the master wallet private key is loaded.
#   "aws"       – Fetches from AWS Secrets Manager (recommended for production)
#   "encrypted" – Decrypts from MASTER_WALLET_ENCRYPTED_KEY using AES-256-GCM
#   "env"       – Reads MASTER_WALLET_PRIVATE_KEY from env (dev only)
WALLET_SECRET_PROVIDER=env

# --- AWS Secrets Manager mode (WALLET_SECRET_PROVIDER=aws) ---
# The secret name in AWS Secrets Manager containing the base58 private key.
# The secret can be a plain string or JSON: { "privateKey": "base58..." }
AWS_SECRET_NAME=prod/master-wallet
AWS_REGION=us-east-1

# --- Encrypted env mode (WALLET_SECRET_PROVIDER=encrypted) ---
# Generate these values once with:
#   npx tsx -e "import{encryptPrivateKey}from'./lib/secrets-provider';import{randomBytes}from'crypto';const ek=randomBytes(32).toString('hex');console.log('WALLET_ENCRYPTION_KEY='+ek);console.log('MASTER_WALLET_ENCRYPTED_KEY='+encryptPrivateKey('YOUR_BASE58_KEY',ek))"
WALLET_ENCRYPTION_KEY=
MASTER_WALLET_ENCRYPTED_KEY=

# --- Plain env mode (WALLET_SECRET_PROVIDER=env, dev only) ---
# Master Wallet Private Key (base58 encoded)
# This wallet is used for token deployments and revenue distribution
# IMPORTANT: Keep this secure! Never commit to version control.
# Generate a new wallet with: npx tsx -e "import{Keypair}from'@solana/web3.js';import bs58 from'bs58';const k=Keypair.generate();console.log('Public:',k.publicKey.toBase58());console.log('Private:',bs58.encode(k.secretKey))"
MASTER_WALLET_PRIVATE_KEY=your_base58_encoded_private_key_here

# ============= WALLET TRANSACTION GUARDRAILS =============
# Hard limits on outbound wallet operations. Even if the key is compromised,
# these caps bound the maximum damage.

# Maximum SOL per single transaction (default: 1)
MAX_TX_SOL=1

# Maximum total SOL outflow in a rolling 24-hour window (default: 10)
MAX_DAILY_SOL=10

# Optional: comma-separated allowlist of destination addresses.
# If set, only these addresses can receive SOL. Leave empty to allow all.
ALLOWED_DESTINATIONS=

# $NEWS Token Mint Address (for buy and burn)
# Leave empty to skip buy-and-burn functionality
NEWS_TOKEN_MINT=

# Optional: Helius API Key for enhanced RPC
# Get from https://www.helius.dev/
HELIUS_API_KEY=

# ============= NEWS VALIDATION =============

# Maximum age (in hours) for a news story to be accepted
# Default: 6 hours. Keeps the feed fresh and timely.
MAX_NEWS_AGE_HOURS=6

# ============= TWITTER/X AUTO-POSTING (OPTIONAL) =============

# Twitter API v2 credentials for auto-posting published articles
# Get from https://developer.twitter.com/en/portal/dashboard
# Requires "Read and Write" app permissions
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=

# ============= HELIUS WEBHOOKS (OPTIONAL) =============

# Helius API key for on-chain revenue monitoring
# Get from https://www.helius.dev/
# Used to detect incoming creator fees and trigger revenue distribution
# HELIUS_API_KEY is already defined above in Solana config
HELIUS_WEBHOOK_SECRET=

# Master wallet public key — REQUIRED for the Helius webhook to detect
# incoming SOL transfers (creator fees). Without this, revenue auto-distribution
# will silently do nothing. Derive it from your private key with:
#   npx tsx -e "import{getMasterWalletAddress}from'./lib/solana-wallet';console.log(getMasterWalletAddress())"
MASTER_WALLET_PUBLIC_KEY=

# ============= CREATOR FEE CLAIMING (OPTIONAL) =============

# How often to claim creator fees from pump.fun (minutes, default: 30)
CREATOR_FEE_CLAIM_INTERVAL_MINUTES=30

# ============= ELEVENLABS TTS (OPTIONAL) =============

# ElevenLabs API key for text-to-speech with McAfee voice clone
# Get from https://elevenlabs.io/
ELEVENLABS_API_KEY=

# ElevenLabs Voice ID for the McAfee cloned voice
# Create a cloned voice at https://elevenlabs.io/voice-cloning and copy its ID
ELEVENLABS_MCAFEE_VOICE_ID=

# ============= PUMP.FUN MAYHEM MODE (OPTIONAL) =============

# Fee recipient address for Mayhem Mode (pump.fun AI agent trading)
# The AI agent receives 1 billion extra tokens to trade during the first 24h.
# Toggle on/off via Telegram: /mayhem on|off
MAYHEM_FEE_RECIPIENT=

